target 'localhost' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  inhibit_all_warnings!
  
    pod 'Firebase'
    pod 'Firebase/Auth'
    pod 'Firebase/Core'
    pod 'Firebase/Storage'
    pod 'Firebase/Messaging'
    pod 'Firebase/Database'
    pod 'Firebase/Firestore'
    pod 'GeoFire', '~> 3.0'
    pod 'SVProgressHUD'
    pod 'ChameleonFramework'
    pod 'RevealingSplashView'
    pod 'AppCenter'
    pod 'SnapKit'
    pod 'SDWebImage'
    pod 'RangeSeekSlider'
    pod 'Shuffle-iOS'
    pod 'PopBounceButton'
    pod 'Kingfisher'
    pod "Koloda", '~> 5.0'
    pod 'Eureka', '~> 5.1.0'
    pod 'MessageKit'
    pod 'InputBarAccessoryView'
    pod 'QuickTableViewController'
    pod 'lottie-ios'

    target 'localhostUnitTests' do
        inherit! :search_paths
        pod 'Firebase'
        pod 'Quick'
        pod 'Nimble', '~> 8.0'
    end
    
end
